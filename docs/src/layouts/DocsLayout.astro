---
import Layout from './Layout.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description } = Astro.props;

const sidebar = [
  {
    label: 'Getting Started',
    items: [
      { label: 'Introduction', href: '/ux-datatables/getting-started/introduction/' },
      { label: 'Installation', href: '/ux-datatables/getting-started/installation/' },
      { label: 'Quick Start', href: '/ux-datatables/getting-started/quick-start/' },
    ],
  },
  {
    label: 'Guide',
    items: [
      { label: 'Usage', href: '/ux-datatables/guide/usage/' },
      { label: 'Configuration', href: '/ux-datatables/guide/configuration/' },
      { label: 'Columns', href: '/ux-datatables/guide/columns/' },
      { label: 'Options', href: '/ux-datatables/guide/options/' },
      { label: 'Extensions', href: '/ux-datatables/guide/extensions/' },
      { label: 'Ajax', href: '/ux-datatables/guide/ajax/' },
    ],
  },
  {
    label: 'Reference',
    items: [
      { label: 'AbstractDataTable', href: '/ux-datatables/reference/abstract-datatable/' },
      { label: 'Action Columns', href: '/ux-datatables/reference/action-columns/' },
      { label: 'Maker Command', href: '/ux-datatables/reference/maker/' },
    ],
  },
];
---

<Layout title={title} description={description}>
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="flex flex-col md:flex-row gap-8 py-8">
			<!-- Sidebar -->
			<aside class="w-full md:w-64 shrink-0">
				<nav class="sticky top-24 space-y-8">
					{sidebar.map((section) => (
						<div>
							<h3 class="mb-3 text-sm font-semibold uppercase tracking-wider text-slate-500">
								{section.label}
							</h3>
							<ul class="space-y-2">
								{section.items.map((item) => (
									<li>
										<a
											href={item.href}
											class="block text-sm text-slate-400 hover:text-white transition-colors border-l-2 border-transparent hover:border-indigo-500 pl-4"
										>
											{item.label}
										</a>
									</li>
								))}
							</ul>
						</div>
					))}
				</nav>
			</aside>

			<!-- Content -->
			<article class="prose prose-invert prose-indigo max-w-none flex-grow">
				<slot />
			</article>
		</div>
	</div>
</Layout>

<style is:global>
	@import "tailwindcss";
	.prose h1 { @apply text-4xl mb-8; }
	.prose h2 { @apply text-2xl mt-12 mb-6 pb-2 border-b border-slate-800; }
	.prose h3 { @apply text-xl mt-8 mb-4; }
	.prose p { @apply text-slate-400 leading-relaxed mb-4; }
	.prose code { @apply bg-slate-800 px-1.5 py-0.5 rounded text-indigo-300 font-mono text-sm; }
	.prose pre { @apply bg-slate-900 border border-slate-800 rounded-lg p-4 my-6 overflow-x-auto; }
	.prose pre code { @apply bg-transparent p-0 text-slate-300; }
	.prose ul { @apply list-disc list-inside space-y-2 mb-4 text-slate-400; }
	.prose ol { @apply list-decimal list-inside space-y-2 mb-4 text-slate-400; }
	.prose strong { @apply text-white font-semibold; }
	.prose a { @apply text-indigo-400 hover:text-indigo-300 underline underline-offset-4 decoration-slate-700 hover:decoration-indigo-400 transition-all; }
</style>
