---
import Footer from '../components/Footer.astro'
import { getCollection } from 'astro:content'
import '../styles/global.css'

interface Props {
  title: string
  description?: string
}

const { title, description } = Astro.props

const docsPages = (await getCollection('docs'))
  .map((entry) => ({
    title: entry.data.title,
    description: entry.data.description ?? '',
    href: `/ux-datatables/${entry.id}/`,
  }))
  .sort((a, b) => a.title.localeCompare(b.title))
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/ux-datatables/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | UX DataTables</title>
    <meta
      name="description"
      content={description || 'Symfony bundle integrating DataTables in Symfony applications'}
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="flex min-h-screen flex-col bg-[#0a1628] font-['Inter',system-ui,sans-serif] text-white"
  >
    <nav
      class="sticky top-0 z-40 w-full border-b border-slate-800 bg-[#0a1628]/80 backdrop-blur-md"
    >
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 items-center justify-between">
          <div class="flex items-center gap-4">
            <a href="/ux-datatables/" class="flex items-center gap-2">
              <span
                class="bg-gradient-to-r from-sky-400 to-blue-500 bg-clip-text text-xl font-bold text-transparent"
                >UX DataTables</span
              >
            </a>
            <div class="hidden md:block">
              <div class="ml-10 flex items-baseline space-x-4">
                <a
                  href="/ux-datatables/getting-started/introduction/"
                  class="rounded-md px-3 py-2 text-sm font-medium text-slate-300 transition-colors hover:text-white"
                  >Documentation</a
                >
                <a
                  href="https://github.com/pentiminax/ux-datatables"
                  class="rounded-md px-3 py-2 text-sm font-medium text-slate-300 transition-colors hover:text-white"
                  >GitHub</a
                >
              </div>
            </div>
          </div>
          <div class="relative hidden w-full max-w-sm md:block" data-doc-search>
            <input
              type="search"
              aria-label="Search documentation"
              class="w-full rounded-lg border border-slate-700 bg-slate-900/70 px-3 py-2 pr-16 text-sm text-slate-100 placeholder:text-slate-400 focus:border-sky-500 focus:ring-2 focus:ring-sky-500/40 focus:outline-none"
              placeholder="Search docs..."
              data-doc-search-input
              autocomplete="off"
            />
            <span
              class="pointer-events-none absolute top-1/2 right-3 -translate-y-1/2 rounded border border-slate-600 px-1.5 py-0.5 text-[11px] text-slate-300"
              data-doc-search-shortcut
              >Ctrl+K</span
            >
            <div
              class="absolute top-[calc(100%+0.5rem)] left-0 hidden w-full overflow-hidden rounded-lg border border-slate-700 bg-slate-900 shadow-xl"
              data-doc-search-results
            >
              <ul class="max-h-80 overflow-y-auto py-1" data-doc-search-results-list></ul>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <main class="flex-grow">
      <slot />
    </main>

    <Footer />

    <script is:inline define:vars={{ docsPages }}>
      (() => {
        const search = document.querySelector('[data-doc-search]')
        if (!search) return

        const input = search.querySelector('[data-doc-search-input]')
        const shortcut = search.querySelector('[data-doc-search-shortcut]')
        const resultsContainer = search.querySelector('[data-doc-search-results]')
        const resultsList = search.querySelector('[data-doc-search-results-list]')
        if (!input || !shortcut || !resultsContainer || !resultsList) return

        const isMac = /Mac|iPhone|iPad|iPod/i.test(navigator.platform)
        shortcut.textContent = isMac ? 'âŒ˜K' : 'Ctrl+K'

        const normalize = (value) => value.toLowerCase().trim()

        const renderResults = (query) => {
          const normalizedQuery = normalize(query)
          resultsList.innerHTML = ''

          if (normalizedQuery.length < 2) {
            resultsContainer.classList.add('hidden')
            return
          }

          const matches = docsPages
            .filter((page) => {
              const haystack = `${page.title} ${page.description}`.toLowerCase()
              return haystack.includes(normalizedQuery)
            })
            .slice(0, 8)

          if (matches.length === 0) {
            resultsList.innerHTML =
              '<li class="px-3 py-2 text-sm text-slate-400">No results found.</li>'
            resultsContainer.classList.remove('hidden')
            return
          }

          for (const page of matches) {
            const item = document.createElement('li')
            item.innerHTML = `<a href="${page.href}" class="block px-3 py-2 transition-colors hover:bg-slate-800"><p class="text-sm font-medium text-slate-100">${page.title}</p>${page.description ? `<p class="mt-0.5 text-xs text-slate-400">${page.description}</p>` : ''}</a>`
            resultsList.appendChild(item)
          }

          resultsContainer.classList.remove('hidden')
        }

        input.addEventListener('input', () => renderResults(input.value))
        input.addEventListener('focus', () => renderResults(input.value))

        document.addEventListener('keydown', (event) => {
          if ((event.ctrlKey || event.metaKey) && event.key.toLowerCase() === 'k') {
            event.preventDefault()
            input.focus()
            input.select()
            renderResults(input.value)
          }
          if (event.key === 'Escape') {
            resultsContainer.classList.add('hidden')
          }
        })

        document.addEventListener('click', (event) => {
          if (!search.contains(event.target)) {
            resultsContainer.classList.add('hidden')
          }
        })
      })()
    </script>
  </body>
</html>

<style is:global>
  @import 'tailwindcss';
  :root {
    --accent: 49, 116, 199;
    --accent-light: 83, 184, 219;
    --accent-dark: 26, 58, 92;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  /* Smooth scroll */
  html {
    scroll-behavior: smooth;
  }

  /* Custom Scrollbar */
  ::-webkit-scrollbar {
    width: 10px;
  }
  ::-webkit-scrollbar-track {
    background: #0a1628;
  }
  ::-webkit-scrollbar-thumb {
    background: #1e293b;
    border-radius: 5px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #334155;
  }

  /* Typography */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    @apply font-bold tracking-tight text-white;
  }
</style>
