<style>
  :root {
    --accent-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    
    /* Dark Theme Defaults */
    --lp-bg: #0f172a;
    --lp-bg-alt: #0b1120;
    --lp-card-bg: #1e293b;
    --lp-border: #334155;
    --lp-text-main: #f8fafc;
    --lp-text-muted: #94a3b8;
    --lp-hero-bg-1: #1e293b;
    --lp-hero-bg-2: #0f172a;
  }

  :root[data-theme='light'] {
    /* Light Theme Overrides */
    --lp-bg: #ffffff;
    --lp-bg-alt: #f1f5f9;
    --lp-card-bg: #ffffff;
    --lp-border: #cbd5e1;
    --lp-text-main: #1e293b;
    --lp-text-muted: #64748b;
    --lp-hero-bg-1: #f8fafc;
    --lp-hero-bg-2: #e2e8f0;
  }

  .landing-page {
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    color: var(--lp-text-main);
    overflow-x: hidden;
    background-color: var(--lp-bg);
  }

  /* Hero Section */
  .hero-section {
    padding: 6rem 1rem;
    text-align: center;
    background: radial-gradient(circle at center, var(--lp-hero-bg-1) 0%, var(--lp-hero-bg-2) 100%);
    border-bottom: 1px solid var(--lp-border);
    margin-bottom: 4rem;
  }

  .badge-container {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--lp-text-main);
  }

  .text-gradient {
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .text-white {
    color: var(--lp-text-main);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--lp-text-muted);
    max-width: 600px;
    margin: 0 auto 3rem;
    line-height: 1.6;
  }

  .hero-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .button {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
    font-size: 1.1rem;
  }

  .button svg {
    margin-left: 0.5rem;
  }

  .button.primary {
    background: var(--accent-gradient);
    color: white;
    box-shadow: 0 4px 14px rgba(102, 126, 234, 0.4);
  }

  .button.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
  }

  .button.secondary {
    background: transparent;
    border: 2px solid var(--lp-border);
    color: var(--lp-text-main);
  }

  .button.secondary:hover {
    border-color: var(--lp-text-main);
    background: rgba(125, 125, 125, 0.1);
  }

  /* Features Section */
  .features-section {
    padding: 4rem 1rem;
    text-align: center;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--lp-text-main);
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--lp-text-muted);
    margin-bottom: 3rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .feature-card {
    background: var(--lp-card-bg);
    border: 1px solid var(--lp-border);
    padding: 2rem;
    border-radius: 1rem;
    text-align: left;
    transition: transform 0.2s, border-color 0.2s;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  .feature-card:hover {
    transform: translateY(-5px);
    border-color: #667eea;
  }

  .icon-wrapper {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--lp-text-main);
  }

  .feature-card p {
    color: var(--lp-text-muted);
    line-height: 1.5;
  }

  /* Code Comparison */
  .code-preview-section {
    padding: 4rem 1rem;
    background: var(--lp-bg-alt);
    margin: 4rem -2rem; /* Minor breakout attempt */
    text-align: center;
    border-top: 1px solid var(--lp-border);
    border-bottom: 1px solid var(--lp-border);
  }

  .code-comparison {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    max-width: 1000px;
    margin: 3rem auto 0;
  }

  .code-block, .result-preview {
    flex: 1;
    min-width: 300px;
    text-align: left;
    background: var(--lp-card-bg);
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid var(--lp-border);
  }

  .code-header {
    background: var(--lp-bg);
    padding: 0.5rem 1rem;
    font-size: 0.8rem;
    color: var(--lp-text-muted);
    border-bottom: 1px solid var(--lp-border);
  }

  .code-block pre {
    margin: 0;
    padding: 1.5rem;
    overflow-x: auto;
    font-size: 0.9rem;
    color: var(--lp-text-main);
    font-family: 'Fira Code', monospace;
  }
  
  .result-preview {
    background: var(--lp-card-bg);
    color: var(--lp-text-main);
  }

  .mock-table {
    width: 100%;
    font-size: 0.9rem;
  }
  
  .mock-header {
    display: flex;
    background: var(--lp-bg-alt);
    padding: 0.75rem 1rem;
    font-weight: bold;
    border-bottom: 2px solid var(--lp-border);
    color: var(--lp-text-muted);
  }
  
  .mock-header span, .mock-row span {
    flex: 1;
  }
  
  .mock-row {
    display: flex;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--lp-border);
    align-items: center;
  }
  
  .mock-row:last-child {
    border-bottom: none;
  }
  
  .badge-success {
    background: #dcfce7;
    color: #166534;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
  }
  
  .badge-danger {
    background: #fee2e2;
    color: #991b1b;
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .arrow {
    font-size: 2rem;
    color: var(--lp-text-muted);
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }
    
    .code-comparison {
      flex-direction: column;
    }
    
    .arrow {
      transform: rotate(90deg);
    }
  }

  /* Footer Section */
  .footer-section {
    padding: 4rem 1rem;
    border-top: 1px solid var(--lp-border);
    background: var(--lp-bg-alt);
    margin-top: 4rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    max-width: 1000px;
    margin: 0 auto;
    text-align: left;
  }

  .footer-col h4 {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--lp-text-main);
    margin-bottom: 1.5rem;
  }

  .footer-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-col li {
    margin-bottom: 0.75rem;
  }

  .footer-col a {
    color: var(--lp-text-muted);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-col a:hover {
    color: var(--sl-color-accent);
  }
</style>
