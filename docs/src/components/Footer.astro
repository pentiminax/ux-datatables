---
import { docsFooterSections } from '../config/navigation'
---

<footer class="w-full border-t border-slate-800 bg-[#0b1120] py-12">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-3">
      {
        docsFooterSections.map((section) => (
          <div class="footer-col">
            <h4 class="mb-6 text-lg font-bold text-white">{section.label}</h4>
            <ul class="space-y-3">
              {section.items.map((item) => (
                <li>
                  <a href={item.href} class="text-slate-400 transition-colors hover:text-blue-400">
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
      <div class="footer-col">
        <h4 class="mb-6 text-lg font-bold text-white">Community</h4>
        <ul class="space-y-3">
          <li>
            <a
              href="https://github.com/pentiminax/ux-datatables"
              target="_blank"
              class="text-slate-400 transition-colors hover:text-blue-400">GitHub</a
            >
          </li>
          <li>
            <a
              href="https://github.com/pentiminax/ux-datatables/issues"
              target="_blank"
              class="text-slate-400 transition-colors hover:text-blue-400">Issues</a
            >
          </li>
          <li>
            <a
              href="https://packagist.org/packages/pentiminax/ux-datatables"
              target="_blank"
              class="text-slate-400 transition-colors hover:text-blue-400">Packagist</a
            >
          </li>
        </ul>
      </div>
    </div>
    <div class="mt-12 border-t border-slate-800 pt-8 text-center text-slate-500">
      <p>&copy; {new Date().getFullYear()} UX DataTables. Built by <a href="https://pentiminax.fr">Pentiminax</a></p>
    </div>
  </div>
</footer>
