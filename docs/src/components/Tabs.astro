<div class="tabs-container my-8 overflow-hidden rounded-xl border border-slate-800 bg-[#0b1120]">
  <div class="tab-labels flex overflow-x-auto border-b border-slate-800 bg-slate-900/50">
    <!-- Labels will be injected by script -->
  </div>
  <div class="p-6">
    <slot />
  </div>
</div>

<script>
  function initTabs() {
    document.querySelectorAll('.tabs-container').forEach((container) => {
      const labelContainer = container.querySelector('.tab-labels')
      const panels = container.querySelectorAll('.tab-panel')

      if (labelContainer && labelContainer.children.length === 0) {
        panels.forEach((panel, index) => {
          const label = (panel as HTMLElement).dataset.label || `Tab ${index + 1}`
          const button = document.createElement('button')
          button.className = `tab-button px-6 py-3 text-sm font-medium border-b-2 transition-colors whitespace-nowrap ${index === 0 ? 'border-indigo-500 text-indigo-400' : 'border-transparent text-slate-400 hover:text-white'}`
          button.textContent = label
          button.addEventListener('click', () => {
            // Reset all
            container.querySelectorAll('.tab-button').forEach((btn) => {
              btn.classList.remove('border-indigo-500', 'text-indigo-400')
              btn.classList.add('border-transparent', 'text-slate-400')
            })
            panels.forEach((p) => p.classList.add('hidden'))

            // Set active
            button.classList.add('border-indigo-500', 'text-indigo-400')
            button.classList.remove('border-transparent', 'text-slate-400')
            panel.classList.remove('hidden')
          })
          labelContainer.appendChild(button)

          if (index === 0) panel.classList.remove('hidden')
        })
      }
    })
  }

  initTabs()
  // Re-init on navigation (for View Transitions if used)
  document.addEventListener('astro:after-swap', initTabs)
</script>
