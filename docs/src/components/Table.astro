---
interface Props {
  headers: string[]
  rows: string[][]
}

const { headers, rows } = Astro.props
---

<div class="my-6 overflow-x-auto rounded-xl border border-slate-800 bg-[#0b1120]">
  <table class="w-full min-w-[640px] border-collapse text-left text-sm">
    <thead class="bg-slate-900/70">
      <tr>
        {
          headers.map((header) => (
            <th class="border-b border-slate-700 px-4 py-3 font-semibold text-slate-100">
              {header}
            </th>
          ))
        }
      </tr>
    </thead>
    <tbody>
      {
        rows.map((row) => (
          <tr class="transition-colors even:bg-slate-900/30 hover:bg-blue-500/10">
            {row.map((cell) => (
              <td class="border-b border-slate-800 px-4 py-3 align-top text-slate-300">{cell}</td>
            ))}
          </tr>
        ))
      }
    </tbody>
  </table>
</div>
