---
interface Props {
	text: string;
	variant?: 'note' | 'tip' | 'caution' | 'danger' | 'success';
}

const { text, variant = 'note' } = Astro.props;

const colors = {
	note: 'bg-blue-500/10 text-blue-400 border-blue-500/20',
	tip: 'bg-purple-500/10 text-purple-400 border-purple-500/20',
	caution: 'bg-yellow-500/10 text-yellow-400 border-yellow-500/20',
	danger: 'bg-red-500/10 text-red-400 border-red-500/20',
	success: 'bg-green-500/10 text-green-400 border-green-500/20',
};
---

<span class={`inline-block px-2 py-0.5 rounded-full text-xs font-bold border ${colors[variant]}`}>
	{text}
</span>
